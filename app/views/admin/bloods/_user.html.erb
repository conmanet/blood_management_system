<tr>
  <td><%= user.id %></td>
  <td><%= link_to user.name, user_path(user), target: :_blank %></td>
  <td><%= user.display_gender %></td>
  <td><%= user.display_blood_type %></td>
  <td>
    <span class="label label-<%= user.status_class %>" title="<%= user.status_title %>">
      <%= user.status_display %>
    </span>
  </td>
  <td class="address-truncate" title="<%= "Địa chỉ: #{user.address}\r\nNguyên quán: #{user.place_of_birth}" %>">
    <%= user.address || user.place_of_birth %>
  </td>
  <td title="<%= user.phone_number %> <%= " - #{user.phone_number_2}" if user.phone_number_2.present? %>">
    <%= format_phone_number user.phone_number %>
  </td>
</tr>
