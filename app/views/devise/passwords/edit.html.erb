<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <h2 class="text-center">Đổi mật khẩu</h2>
        <%= form_for resource, as: resource_name, url: password_path(resource_name),
          html: {method: :put, class: "wp-form"} do |f| %>
          <div class="devise_error_messages">
            <%= devise_error_messages! %>
          </div>
          <%= f.hidden_field :reset_password_token %>
          <%= f.password_field :password, autocomplete: "off",
            placeholder: "Mật khẩu mới", class: "form-control wpcf7-text" %>
          <%= f.password_field :password_confirmation, autocomplete: "off",
            placeholder: "Xác nhận lại mật khẩu", class: "form-control wpcf7-text" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <%= f.submit "Xác nhận", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
