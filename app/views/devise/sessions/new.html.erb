<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <h2 class="text-center">Đăng Nhập</h2>
        <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <%= f.email_field :email, class: "wp-form-control", autofocus: true, placeholder: "Email" %>
          <%= f.password_field :password, class: "wp-form-control", autocomplete: "off", placeholder: "Mật khẩu" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <div class="remember-login">
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Tự động đăng nhập lần sau" %>
                <% end %>
              </div>
              <%= f.submit "Đăng Nhập", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
