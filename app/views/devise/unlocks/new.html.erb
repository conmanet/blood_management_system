<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <h2 class="text-center">Kích họat lại tài khoản</h2>
        <%= form_for resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post} do |f| %>
          <div class="devise_error_messages">
            <%= devise_error_messages! %>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "off",
            placeholder: "Email", class: "wp-form-control" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <%= f.submit "Gửi", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
