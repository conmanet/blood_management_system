<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <h2 class="text-center">Đăng Ký Tài Khoản</h2>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), format: :html do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, class: "wp-form-control", autofocus: true, placeholder: "Email" %>
          <%= f.password_field :password, class: "wp-form-control",
            autocomplete: "off", placeholder: "Mật khẩu" %>
          <%= f.password_field :password_confirmation, class: "wp-form-control",
            autocomplete: "off", placeholder: "Xác nhận lại mật khẩu" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <%= f.submit "Đăng Ký", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
