<li>
  <div class="media">
    <div class="media-left">
      <%= link_to guest_event_path(event.title_slug), class: "news_img" do %>
        <%= image_tag event.image.small.url, class: "media-object", alt: event.title %>
      <% end %>
    </div>
    <div class="media-body">
      <%= link_to guest_event_path(event.title_slug) do %>
        <%= event.title %>
      <% end %>
     <span class="feed_date"><%= l event.date_time.to_datetime, format: :article_timestamp %></span>
    </div>
  </div>
</li>
